<h1>Compose</h1>

<form class="" action="/compose" method="post">
  <div class="mb-3">
    <label>Title</label>
    <input class="form-control" type="text" name="postTitle" required autofocus autocomplete="off">
    <label>Post</label>
    <textarea class="form-control " name="postBody" rows="5" cols="30" required></textarea>
  </div>
  <br>
  <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>

